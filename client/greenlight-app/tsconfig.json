{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "jsx": "react-native",
    "skipLibCheck": true, /* Skip type checking all .d.ts files. */
    "moduleResolution": "node",
    "esModuleInterop": true,
    "noEmit": true,
    "strict": true,
    "baseUrl": "./src",
    "paths": {
      "@components/*": [
        "components/*"
      ],
      "@view/*": [
        "view/*"
      ],
      "@svg/*": [
        "components/svg/*"
      ],
      "@domain/*": [
        "domain/*"
      ],
      "@service/*": [
        "service/*"
      ],
      "@utils/*": [
        "utils/*"
      ],
      "@controller/*": [
        "controller/*"
      ],
      "@assets/*": [
        "assets/*"
      ],
      "@interfaces/*": [
        "domain/interfaces/*"
      ],
      "@types/*": [
        "domain/types/*"
      ],
      "@configs/*": [
        "configs/*"
      ],
      "@stores/*": [
        "stores/*"
      ],
      "@app/*": [
        "app/*"
      ],
    },
  }
}